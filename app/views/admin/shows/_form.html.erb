<%= render "validation_errors", resource: @show %>

<%= form_for [:admin, @show], remote: true do |f| %>
  <div class="row">
    <div class="form-group col-sm-6">
      <%= f.label :venue_name, "Venue Name", class: "required" %>
      <%= f.text_field :venue_name, class: "form-control" %>
    </div>

    <div class="form-group col-sm-6">
      <%= f.label :venue_url, "Venue URL" %>
      <%= fa_icon("info-circle", data: { toggle: "tooltip", placement: "right" },
        title: "To ensure that the link opens properly, please copy and paste the URL from your address bar.") %>
      <%= f.text_field :venue_url, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :date, class: "required" %>
      <%= f.text_field :date, value: @show.date ? @show.date.to_s(:long) : nil,
        class: "form-control datepicker" %>
    </div>

    <div class="form-group col-sm-4">
      <%= f.label :time %>
      <%= f.text_field :time, class: "form-control" %>
    </div>

    <div class="form-group col-sm-4">
      <%= f.label :cover %>
      <%= f.text_field :cover, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="row">
    <div class="form-group col-sm-6">
      <%= f.label :city, class: "required" %>
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group col-sm-3">
      <%= f.label :state, class: "required" %>
      <%= f.text_field :state, class: "form-control" %>
    </div>

    <div class="form-group col-sm-3">
      <%= f.label :zip %>
      <%= f.text_field :zip, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, rows: 3, class: "form-control" %>
  </div>

  <div class="checkbox <%= "active" if @show.published? %>">
    <%= f.label :published do %>
      <%= f.check_box :published, class: "published" %> Publish this show?
    <% end %>
  </div>

  <%= f.submit "Save", class: "btn btn-blue" %>
  <%= link_to "Cancel", admin_shows_path, remote: true, class: "cancel" %>
<% end %>