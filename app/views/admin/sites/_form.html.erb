<%= render "shared/validation_errors", resource: @site %>

<%= form_for @site, url: admin_site_path do |f| %>
  <div class="form-group">
    <%= f.label :homepage_id, "Home Page" %>
    <%= f.select :homepage_id, grouped_page_options_for_select(@site.homepage_id),
      {}, class: "form-control" %>
  </div>

  <%= submit_btn %>
  <%= link_to "Cancel", admin_root_path, class: "cancel" %>
<% end %>