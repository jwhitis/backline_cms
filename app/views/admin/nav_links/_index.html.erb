<div class="corner-container">
  <%= corner_btn("New Link", new_admin_nav_link_path) %>
</div>

<h2>Nav</h2>

<%= render "flash_messages" %>

<i class="instructions">Click and drag the links to reorder them.</i>

<table class="table sortable" data-url="<%= reorder_admin_nav_links_path %>">
  <tbody>
    <% @nav_links.each do |nav_link| %>
      <tr id="<%= nav_link.id %>">
        <td>
          <span class="position"><%= nav_link.position %>.</span>
          <%= nav_link.text %>
        </td>
        <td class="edit">
          <%= edit_link(nav_link) %>
          <%= delete_link(nav_link) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>