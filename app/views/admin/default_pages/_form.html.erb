<%= render "shared/validation_errors", resource: @default_page %>

<%= form_for [:admin, @default_page], remote: true do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :title, class: "required" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :slug %>
        <%= fa_icon("info-circle", data: { toggle: "tooltip", placement: "right" },
          title: "This is the part of the page URL that makes it unique. It cannot be edited for this page.") %>
        <%= f.text_field :slug, disabled: true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="checkbox published <%= "checked" if @default_page.published? %>">
    <%= f.label :published do %>
      <%= f.check_box :published %> Publish this page?
    <% end %>
  </div>

  <%= submit_btn %>
  <%= link_to "Cancel", admin_pages_path, remote: true, class: "cancel" %>
<% end %>