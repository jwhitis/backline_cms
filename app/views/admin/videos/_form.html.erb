<%= render "layouts/errors", model: @video %>
<%= form_for [:admin, @video], remote: true do |f| %>
  <div class="published-toggle <%= published_state(@video) %>">
    <%= f.check_box :published %>
    <span class="on-text">
      This video is currently published. <a href="javascript:void(0)">Unpublish it?</a>
    </span>
    <span class="off-text">
      This video is currently unpublished. <a href="javascript:void(0)">Publish it?</a>
    </span>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_area :caption, rows: 4, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :embed %>
    <%= f.text_area :embed, rows: 4, class: "form-control" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-pink" %>
  <%= link_to "Cancel", admin_videos_path, remote: true, class: "cancel" %>
<% end %>