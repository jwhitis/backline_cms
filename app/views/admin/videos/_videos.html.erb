<%= render "layouts/alerts" %>
<table class="table table-condensed">
  <thead>
    <tr>
      <th class="date">Added</th>
      <th>Title</th>
      <th class="edit"></th>
      <th class="delete"></th>
    </tr>
  </thead>
  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td class="date"><%= video.pretty_created_at %></td>
        <td><%= video.title %></td>
        <td class="edit"><%= link_to "Edit", edit_admin_video_path(video), remote: true %></td>
        <td class="delete"><%= link_to "Delete", admin_video_path(video), method: :delete, remote: true, data: { confirm: "Are you sure you want to delete this video?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Add Video", new_admin_video_path, remote: true, class: "btn btn-primary" %>