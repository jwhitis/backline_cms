<%= link_to fa_icon("chevron-left"), edit_admin_album_path(@album), remote: true,
  class: "btn-blue corner-btn" %>

<%= render "flash_messages" %>

<h2><%= @album.title %></h2>

<%= render "admin/album_tracks/form" %>

<i class="instructions">Click and drag the tracks to reorder them.</i>

<table class="table sortable" data-url="<%= reorder_admin_album_album_tracks_path(@album) %>">
  <tbody>
    <% @album_tracks.each do |album_track| %>
      <tr id="<%= album_track.id %>">
        <td class="inline-controls" data-audio-url="<%= album_track.audio.url %>">
          <% if album_track.audio.present? %>
            <%= fa_stacked_icon "play", base: "circle-thin", class: "play" %>
            <%= fa_stacked_icon "stop", base: "circle-thin", class: "stop" %>
          <% end %>
        </td>
        <td>
          <span class="number"><%= album_track.number %>.</span>
          <%= album_track.title %>
        </td>
        <td class="edit">
          <%= link_to fa_icon("times-circle"), admin_album_album_track_path(@album, album_track),
            method: :delete, remote: true, data: { confirm: "Are you sure you want to remove this track?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "layouts/inline_player" %>