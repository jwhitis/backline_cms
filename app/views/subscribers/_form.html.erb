<%= form_for @subscriber do |f| %>
  <div class="form-group">
    <%= f.label :first_name, "First Name", class: "sr-only" %>
    <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name, "Last Name", class: "sr-only" %>
    <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Email Address", class: "sr-only" %>
    <%= f.email_field :email, placeholder: "Email Address", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :country, class: "sr-only" %>
    <%= f.country_select :country, { priority_countries: ["US"] }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :zip, "Postal Code (optional)", class: "sr-only" %>
    <%= f.text_field :zip, placeholder: "Postal Code (optional)", class: "form-control" %>
  </div>

  <%= hidden_field_tag :request_path, params[:request_path] %>

  <%= f.submit "Continue", class: "btn-main btn-block" %>
<% end %>