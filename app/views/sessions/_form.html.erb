<%= form_for @session, html: { class: "clearfix" } do |f| %>
  <div class="form-group">
    <%= f.label :email, "Email Address", class: "sr-only" %>
    <%= f.email_field :email, placeholder: "Email Address", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
  </div>

  <div class="checkbox">
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %> Keep me signed in
    <% end %>
  </div>

  <%= f.submit "Sign In", class: "btn-main" %>
<% end %>

<div class="reset-password">
  <%= link_to "Forgot your password?", new_password_reset_path, remote: true %>
</div>