<div class="dropdown admin-nav <%= "hidden" if admin_nav_hidden? %>" id="admin-dropdown">
  <button type="button" data-toggle="dropdown" class="dropdown-toggle btn-white">
    <span class="active">Users</span>
    <%= fa_icon("caret-down") %>
  </button>

  <ul class="dropdown-menu">
    <% super_admin_nav_links.each_with_index do |(text, url, _icon), index| %>
      <li class="<%= "hidden" if index.zero? %>">
        <%= admin_nav_link_to(text, url) %>
      </li>
    <% end %>
  </ul>
</div>

<div class="heading-box sidebar-left admin-nav <%= "hidden" if admin_nav_hidden? %>"
  id="admin-sidebar">
  <h3>Admin</h3>

  <ul>
    <% super_admin_nav_links.each do |(text, url, _icon)| %>
      <li><%= admin_nav_link_to(text, url) %></li>
    <% end %>
  </ul>
</div>