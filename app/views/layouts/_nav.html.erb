<%= navbar_tag do %>
  <div class="container">
    <div class="navbar-header">
      <%= link_to_home_page class: "navbar-brand" do %>
        <% if @site.logo_url %>
          <%= image_tag @site.logo_url %>
        <% else %>
          <span class="display-font"><%= @site.title %></span>
        <% end %>
      <% end %>

      <button type="button" class="tcon tcon-menu--xbutterfly pull-right visible-xs"
        data-toggle="collapse" data-target="#main-navbar-collapse" aria-label="toggle menu">
        <span class="tcon-menu__lines" aria-hidden="true"></span>
        <span class="tcon-visuallyhidden">toggle menu</span>
      </button>
    </div>

    <div class="collapse navbar-collapse" data-toggle="false" id="main-navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if admin_signed_in? %>
          <li><%= link_to "Admin", admin_root_path %></li>
        <% end %>
        <% @nav_links.each do |nav_link| %>
          <li><%= nav_link_to(nav_link) %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  var path = window.location.pathname;
  var href = path.match(/^\/[\w\-]+/)[0];
  $("ul.navbar-nav a[href='" + href + "']").addClass("active");

  $("ul.navbar-nav a").click(function() {
    $("ul.navbar-nav a").removeClass("active");
    $(this).addClass("active");
  });
</script>