<div id="shows" class="fixed-width">
  <h2 class="page-title"><%= @page.title %></h2>

  <div class="shows-table">
    <div class="row header">
      <div class="col-xs-2 text-center">
        Date
      </div>
      <div class="col-xs-5">
        Venue
      </div>
      <div class="col-xs-5 col-sm-3 location">
        Location
      </div>
      <div class="col-xs-2 hidden-xs text-center">
        Cover
      </div>
    </div>

    <%= render @shows %>
  </div>

  <div class="pagination-links clearfix">
    <%= link_to_previous_page @shows, "#{fa_icon("caret-left")} PREV".html_safe,
      remote: true %>
    <%= link_to_next_page @shows, "NEXT #{fa_icon("caret-right")}".html_safe,
      remote: true %>
  </div>
</div>